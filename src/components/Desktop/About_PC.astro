---
import { ViewTransitions } from "astro:transitions";
import NavBar from "./../../components/Desktop/NavBar_PC.astro";
import { Image } from "astro:assets";
import hero from "./../../assets/hero1.jpg";
---

<section class='h-max w-screen max-[990px]:hidden'>
  <div class='h-max w-full relative'>
    <NavBar />
    <Image
      class='h-screen w-full object-cover z-[-9]'
      src={hero}
      alt='background'
    />
    <div
      class='h-screen w-screen absolute z-[9] top-0 left-0 bg-gradient-to-b from-[#000000d6] to-[#0000]'
    >
    </div>
    <div
      class='h-max w-max absolute top-[50vh] translate-x-[-50%] left-[50vw] text-[7vh] text-[#fff9] z-[10] text-center'
    >
      <span class='font-[400] text-[2vh] tracking-[.5vw]'>ABOUT</span>
      <h2 class='font-Hedvig font-[0] tracking-[.6vw]'>
        Your Bali <span class='font-Ephesis lowercase italic'
          >discovery <br /></span
        >
         begins here
      </h2>
    </div>
  </div>
  <div>
    <div class='h-max w-full flex items-center py-[10vh] px-[4vw] bg-[#ded8d8]'>
      <div
        class='h-max w-1/2 flex items-center justify-center flex-col gap-[4vh] px-[4vw] border-r-[.05vw] border-[#333]'
      >
        <h3 class='text-[4vh] font-lato'>
          An oceanside paradise deep in the heart of nature
        </h3>
        <span class='font-lato font-[400] leading-[4vh] tracking-wide'
          >The private limousine transfer from Ngurah Rai International Airport
          to Raffles Bali is less than half an hour, yet the journey takes you
          from one world to another. Tranquillity descends as the streets of
          Jimbaran give way to lush, secluded gardens: welcome to a tropical
          haven, where cares evaporate and time stands still.</span
        >
      </div>
      <div
        class='h-max w-1/2 flex items-center justify-center flex-col gap-[4vh]'
      >
        <span class='font-Ephesis text-[4vh]'>Information</span>
        <div class='flex flex-col gap-[2vh]'>
          <span class='border-b-[.1vh] border-[#222] inline-block w-[140%]'>
            <a href=''>+91 893265823</a>
          </span>
          <span class='border-b-[.1vh] border-[#222] inline-block w-[140%]'>
            <a href=''>rizdevagency@gmail.com</a>
          </span>
          <span class='border-b-[.1vh] border-[#222] inline-block w-[140%]'>
            <a href=''>yourlocation yourcity</a>
          </span>
        </div>
      </div>
    </div>

    <ViewTransitions />
  </div>
</section>
<script></script>
<style>
  html,
  body {
    height: 100%;
    width: 100%;
    scroll-behavior: smooth;
    max-width: 100vw;
    overflow-x: hidden;
  }
</style>
